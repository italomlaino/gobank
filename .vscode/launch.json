    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch GOBank",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/gobank",
        "environment": [
          {
            "name": "PORT", 
            "value": "8080"
          },
          {
            "name": "DATASOURCE_URL",
            "value": "admin:admin@tcp(mysql:3306)/gobank?parseTime=true"
          }
        ]
      }
    ]
  }